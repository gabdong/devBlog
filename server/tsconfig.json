{
  "ts-node": { "files": true },
  "compilerOptions": {
    "allowArbitraryExtensions": false,
    "target": "ES2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "extends": ["./tsconfig.paths.json"]
}

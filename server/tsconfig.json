{
  "compilerOptions": {
    "allowArbitraryExtensions": false,
    "target": "ES2018",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true
  }
}
